<!-- top navigation bar -->
<div class="topnav" id="myTopnav">
  <a href="/" class="active">Nutriton Scraper</a>
  <a href="/scrape">Scrape Articles</a>
  <a href="/saved">Saved Articles</a>

</div>

<!-- below top navigation -->
<div class="container-fluid">
   <!-- main content area -->
   <div class="row">
     <div class="col-md-12" id="home-page">
       <h1>Nutrition News</h1>
       <h5>scraped from Medical News Today</h5>
       <br>
       <br>
     </div>

     <div>
        {{#each newsFeed}}
    <div class="card flex-row flex-wrap">
    <div class="card-header border-0">
        <img src="{{image}}" alt="article image" class="img-rounded" width=200; height=150>
    </div>
    <div class="card-block px-2">
        <h4 class="card-title">
            <a href="https://www.medicalnewstoday.com{{link}}">
            {{title}}
            </a>
        </h4>
        <p class="card-text">{{summary}}</p>

        <div class="saved" {{#unless saved}}style="display:none"{{/unless}}>
            <button type="button" class="btn btn-success" data-id="{{_id}}" data-toggle="modal" data-target='#notesModal'>Article Notes</button>
            <button type="button" class="btn btn-danger deleteSavedButton" data-id="{{_id}}">Delete Saved Article</button>
        </div>

        <div class="unsaved" {{#if saved}}style="display:none"{{/if}}>
            <button type="button" class="btn btn-danger saveButton" data-id="{{_id}}">Save Article</button>
        </div>
    </div>
    <div class="w-100"></div>

</div>
{{/each}}

      <!-- modal to input Notes for a scraped and saved Article -->
<div class="container">

  <!-- Modal -->
  <div class="modal fade" id="notesModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="notesModalTitle"><!-- Populated by js --></h5>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
        <div>
          <ul class="allNotes">
            <!-- Populated by js -->
          </ul>
        </div>
         <hr>
         <textarea rows="6" cols="50" id="notesText">Add new note here</textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" id="notesModalSaveButton" data-dismiss="modal">Save Note</button>
        </div>
      </div>

    </div>
  </div>

</div>
     </div>

   </div>
</div> <!-- end container -->


